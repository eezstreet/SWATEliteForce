class AnimNotify_DestroyEvidence extends Engine.AnimNotify_Scripted;

///////////////////////////////////////////////////////////////////////////////

event Notify(Actor Owner)
{
    local SwatEnemy SwatEnemy;

    SwatEnemy = SwatEnemy(Owner);
    if (SwatEnemy != None)
    {
		SwatEnemy.DropAllEvidence(true);
 	}
}

