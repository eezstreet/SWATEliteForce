///////////////////////////////////////////////////////////////////////////////
// RotateTowardRotationAction.uc - RotateTowardRotationAction class
// Action class that causes AI to turn towards a desired roation

class RotateTowardRotationAction extends SwatMovementAction;
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
//
// Variables

// copied from our goal
var(parameters) rotator   DesiredRotation;

///////////////////////////////////////////////////////////////////////////////
//
// State code

state Running
{
Begin:
    assert(achievingGoal.IsA('RotateTowardRotationGoal'));

    RotateTowardRotation(DesiredRotation);

    succeed();
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
    satisfiesGoal = class'RotateTowardRotationGoal'
}