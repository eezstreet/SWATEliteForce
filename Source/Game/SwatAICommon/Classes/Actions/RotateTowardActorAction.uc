///////////////////////////////////////////////////////////////////////////////
// RotateTowardActorAction.uc - RotateTowardActorAction class
// Action class that causes AI to turn towards an Actor

class RotateTowardActorAction extends SwatMovementAction;
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
//
// Variables

// copied from our goal
var(parameters) Actor   ActorToRotateToward;


///////////////////////////////////////////////////////////////////////////////
//
// State code

state Running
{
Begin:
    assert(achievingGoal.IsA('RotateTowardActorGoal'));

    RotateTowardActor(ActorToRotateToward);

    succeed();
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
    satisfiesGoal = class'RotateTowardActorGoal'
}