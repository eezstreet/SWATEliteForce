///////////////////////////////////////////////////////////////////////////////
// RotateTowardPointGoal.uc - RotateTowardPointGoal class
// Goal class that causes AI to turn towards a point in worldspace

class RotateTowardPointGoal extends Tyrion.AI_MovementGoal;
///////////////////////////////////////////////////////////////////////////////


///////////////////////////////////////////////////////////////////////////////
//
// Variables

// copied to our action
var(parameters) vector   PointToRotateToward;

///////////////////////////////////////////////////////////////////////////////
//
// Constructor

overloaded function Construct(AI_Resource r, int Pri, vector InPoint)
{
	super.Construct(r);
	priority = pri;

    PointToRotateToward = InPoint;
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
	goalName = "RotateTowardPoint"
}