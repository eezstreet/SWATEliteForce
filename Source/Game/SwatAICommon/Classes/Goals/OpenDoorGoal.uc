///////////////////////////////////////////////////////////////////////////////
// OpenDoorGoal.uc - OpenDoorGoal class
// The goal that causes the AI to open a door

class OpenDoorGoal extends MoveToDoorGoal;
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
//
// Variables

// copied to our action
var(parameters) bool	bOpenFrantically;

// internal
var private bool		bOpenedFromSide;


///////////////////////////////////////////////////////////////////////////////
//
// Opening Frantically

function SetOpenFrantically(bool bInOpenFrantically)
{
	bOpenFrantically = bInOpenFrantically;
}

///////////////////////////////////////////////////////////////////////////////
//
// Opened from Side

function bool WasOpenedFromSide()
{
	return (DoorUsageSide != kUseDoorCenter);
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
	priority = 75
	goalName = "OpenDoor"
}