///////////////////////////////////////////////////////////////////////////////
// PickUpWeaponGoal.uc 
// The goal that causes an enemy to pick up a weapon

class PickUpWeaponGoal extends SwatCharacterGoal;
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
//
// Variables

var(parameters) HandHeldEquipmentModel WeaponModel;

///////////////////////////////////////////////////////////////////////////////
//
// Constructor

overloaded function construct( AI_Resource r, HandHeldEquipmentModel inWeaponModel )
{
	super.construct( r );

	assert(inWeaponModel != None);
	WeaponModel = inWeaponModel;
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
	priority = 60
	goalName = "PickUpWeapon"
}