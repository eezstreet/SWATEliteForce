///////////////////////////////////////////////////////////////////////////////
// RotateTowardActorGoal.uc - RotateTowardActorGoal class
// Goal class that causes AI to turn towards an Actor

class RotateTowardActorGoal extends Tyrion.AI_MovementGoal;
///////////////////////////////////////////////////////////////////////////////


///////////////////////////////////////////////////////////////////////////////
//
// Variables

// copied to our action
var(parameters) Actor   ActorToRotateToward;

///////////////////////////////////////////////////////////////////////////////
//
// Constructor

overloaded function Construct(AI_Resource r, int Pri, Actor InActor)
{
	super.Construct(r);
	priority = pri;

    assert(InActor != None);
    ActorToRotateToward = InActor;
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
	goalName = "RotateTowardActor"
}