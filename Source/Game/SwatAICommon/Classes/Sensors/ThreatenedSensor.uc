///////////////////////////////////////////////////////////////////////////////
// ThreatenedSensor.uc - the ThreatenedSensor class
// a sensor that notifies interested parties when we are threatened

class ThreatenedSensor extends Tyrion.AI_Sensor;
///////////////////////////////////////////////////////////////////////////////


///////////////////////////////////////////////////////////////////////////////
//
// Variables

var Pawn ThreatenedBy;

///////////////////////////////////////////////////////////////////////////////
//
// Notifications

function NotifyThreatened(Pawn inThreatenedBy)
{
	assert(inThreatenedBy != None);

	ThreatenedBy = inThreatenedBy;

	setObjectValue(ThreatenedBy);
}

function NotifyNoLongerThreatened()
{
	ThreatenedBy = None;
	setObjectValue(None);
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
}